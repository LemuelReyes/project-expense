extends ./layout.pug

block stylesUpdate
block content
    h1(class="category__subtitle updateTitle") Update
    div(class="updateFormContainer")
        form(method="POST" class="updateForm blue__bg" action="/update/" + document._id)
            input(type="text" placeholder="Enter your budget" name="budget" class="" value=document.budget )
            input(type="text" placeholder="Enter your expense" name="expense" value=document.expense )
            input(type="number" placeholder="Enter your expense amount" name="expenseAmount" value=document.expenseAmount)
            input(type="text" placeholder="Enter your asset" name="asset" value=document.asset)
            input(type="number" placeholder="Enter your asset amount" name="assetAmount" value=document.assetAmount)
            button(class="submit__button green__bg") Submit
