extends ./layout.pug

block styles
block content
    form(action="/budget" method="POST")
        input(type="number" placeholder="Enter your budget" name="budget")
        button Submit
    form(action="/expenses" method="POST")
            input(type="text" placeholder="Enter your expense" name="expenseName")
            input(type="number" placeholder="$" name="expenseAmount")
            button Submit
    form(action="/asset" method="POST")
        input(type="text" placeholder="Enter income assets" name="assetName")
        input(type="number" placeholder="$" name="assetAmount")
        button Submit
    h1 Budget:    
    each report in expenseReport
        h2= report.budget
    h1 Expense / Assets History
    div(class="categories__container")
        h2 Expense
        h2 Amount
        h2 Asset
        h2 Amount
    each report in expenseReport
        div(class="reports__container")
            p(class="red__bg")= report.expense
            p(class="red__bg")= report.expenseAmount
            p(class="green__bg")= report.asset
            p(class="green__bg")= report.assetAmount