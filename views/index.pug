extends ./layout.pug

block content
    form(action="/budget" method="POST")
        input(type="number" placeholder="Enter your budget" name="budget")
        button Submit
    form(action="/expense" method="POST")
            input(type="text" placeholder="Enter your expense" name="expenseName")
            input(type="number" placeholder="$" name="expenseAmount")
            button Submit
    form(action="/asset" method="POST")
        input(type="text" placeholder="Enter income assets" name="assetName")
        input(type="number" placeholder="$" name="assetAmount")
        button Submit
    p(id="budget") Budget
    p(id="total") Total